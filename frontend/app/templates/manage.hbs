<div class="container">
  {{#if (eq this.me.user.username "daph")}}
    <table class="table">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">image</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Status</th>
        <th scope="col">Approved</th>

      </tr>
      </thead>
      <tbody>
      {{#each this.chapters as |item index|}}
        <tr>
          <th scope="row">{{index}}</th>
          <td><img src={{ item.imageUrl}} class="mr-3 rounded-circle" width="80px" alt="chapter image"></td>
          <td>{{item.name}}</td>
          <td>{{item.description}}</td>
          <td>{{item.status}}</td>
          <td>
            <LinkTo @route="chapter" @model={{item.id}}>
              {{#if (eq item.approved "true")}}
                <BsButton @type="success" @defaultText="Approved"/>
              {{else}}
                <BsButton @type="primary" @defaultText="Not Approved"/>
              {{/if}}
            </LinkTo>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  {{else}}

    <Warning @message="You do not have permission to view this page"/>

  {{/if}}

</div>