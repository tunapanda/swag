{{!-- {{outlet}} --}}
{{outlet}}
<div id="chapter">
  <div class="heading  bg-purple">
    Chapter
    <h2>{{model.name}} </h2>
  </div>
  <div class="chapter-content padded">
    <br>
    <H5p @location={{model.contentUri}} />
    <div {{did-insert (fn this.dataLoad)}}></div>

    <br>
    <p> {{model.description}}</p>
  </div>
  {{#if me.isAuthenticated}}
  <a name="" id="" class="btn btn-primary ml-3" href="#" {{action "toggleFlaggingModal"}} role="button">Report </a>
  {{/if}}
  {{!-- <a name="" id="" class="btn btn-primary ml-3" href="#" {{action "toggleRatingModal"}} role="button">Rate </a> --}}

  <CommentSection @selectedChapter={{model.id}} />
</div>

<div class="text-center">
  {{#if (eq me.user.username "daph")}}
    {{#if (eq model.approved "true")}}

      <button {{on "click" (fn this.toggleApproval model.id "true")}} type="button"
        class="btn form-controll btn-danger">
        Un Approve This
      </button>
    {{else}}
      <button {{on "click" (fn this.toggleApproval model.id "false")}} type="button"
        class="btn form-controll btn-success">
        Approve This
      </button>
    {{/if}}

  {{/if}}
</div>



<BsModalSimple @open={{flaggingModal}} @title="Report Chapter" @closeTitle={{null}} @submitTitle="Submit Report"
  @size="" @closeButton={{true}} @fade={{true}} @backdrop={{true}} @backdropClose={{true}}
  @onSubmit={{action "saveFlag"}} @onHidden={{action "toggleFlaggingModal"}} @renderInPlace={{true}}>

  <BsForm @model={{flagModel}} @onSubmit={{action "saveFlag" }} as |form|>
    <form.element @controlType="textarea" @label="Reason for reporting" @property="comment" />
    <form.element @controlType="hidden" @value={{model}} @name="chapter" />


  </BsForm>
</BsModalSimple>
