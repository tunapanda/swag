<div id="chapter">


  <div class="heading  bg-purple">
    Chapter
    <h2>{{model.name}} </h2>

  </div>
  {{!--  --}}

  <div class="chapter-content padded">
    <br>
    <H5p @location={{model.contentUri}} />

    <br>
    <p> {{model.description}}</p>
  </div>
  <a name="" id="" class="btn btn-primary ml-3" href="#" {{action "toggleRatingsModal"}} role="button">Report </a>

  <CommentSection @selectedChapter={{model.id}} />
</div>



<BsModalSimple @open={{ratingsModal}} @title="Report Chapter" @closeTitle={{null}} @submitTitle="Submit Report" @size=""
  @closeButton={{true}} @fade={{true}} @backdrop={{true}} @backdropClose={{true}} @onSubmit={{action "submit"}}
  @onHidden={{action "toggleRatingsModal"}} @renderInPlace={{true}}>

  <BsForm @onSubmit={{action "submit"}} as |form|>
    <form.element @controlType="textarea" @label="Reason for reporting" @property="description" />


  </BsForm>


</BsModalSimple>