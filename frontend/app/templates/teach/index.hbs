{{#if this.me.isAuthenticated}}
  <div class="container bg-white">
    <div class="d-flex justify-content-between pt-3 mt-0">
      <h3>{{t "teach.index.my_content"}}</h3>
      <LinkTo @route="teach.create" class="btn bg-primary" role="button">
        {{t "teach.index.get_started"}}
      </LinkTo>

    </div>

    <div class="row ml-1">
      <LinkTo @route="teach.index">
        <div class="sub-link">{{t "teach.index.drafts"}}</div>
      </LinkTo>
      <LinkTo @route="teach.published">
        <div class="sub-link">{{t "teach.index.published"}}</div>
      </LinkTo>
      <hr>
    </div>
    <hr class="bg-green">

    <div class="row mt-3">

      {{#if this.model}}

        {{#each this.model as |chapter|}}
          <TeachListItem @chapter={{chapter}} />
        {{/each}}
      {{else}}
        {{t "teach.index.no_published"}}
      {{/if}}
    </div>
  </div>
{{else}}

  <Warning @message={{t "teach.index.no_permission"}}/>

{{/if}}