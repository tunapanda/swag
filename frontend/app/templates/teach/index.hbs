{{#if me.isAuthenticated}}
  <div class="container bg-white">
    <div class="d-flex justify-content-between pt-3 mt-0">
      <h3>My H5P Chapters</h3>
      <LinkTo @route="teach.create" class="btn bg-primary" role="button">
        Create H5P Chapter
      </LinkTo>

    </div>

    <div class="row ml-1">
      <span class="pr-1">Drafts </span>
      <hr>
    </div>
    <hr class="bg-green">

    <div class="row mt-3">

      {{#if this.model}}

        {{#each this.model as |chapter|}}
          <TeachListItem @chapter={{chapter}} />
        {{/each}}
      {{else}}

      {{/if}}
    </div>
  </div>
{{else}}

  <Warning @message="You do not have permission to view this page"/>

{{/if}}