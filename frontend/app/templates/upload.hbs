{{#if this.me.isAuthenticated}}

  <div class="text-center">
    <br>

    <img class="rounded-circle" width="300px" alt="" src={{this.profileImage}} role="presentation">

    <br>

    <br>
      <Forms::Upload @multiple="false" @accept="image/*" @filesSelected={{this.uploadPic}}
                     @disabled={{this.uploader.uploading}}>
        {{#if this.uploader.uploading}}
          Uploading... <span class="loading-spinner"></span> {{this.uploader.progress}}%
        {{else}}
          {{#if this.profileImage}}
            {{t "buttons.change_profile_pic"}}
          {{else}}
            {{t "buttons.upload_profile_pic"}}
          {{/if}}
        {{/if}}
      </Forms::Upload>
    {{#if this.signup}}

      <br><br>
      <LinkTo @route="profile">
        {{#if this.complete}}
          <button type="button" class="btn btn-success">Proceed to profile</button>
        {{else}}
          Skip to profile
        {{/if}}
      </LinkTo>
    {{/if}}
  </div>


{{else}}

  <Warning @message="You do not have permission to view this page"/>

{{/if}}