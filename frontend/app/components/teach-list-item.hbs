<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100 rounded-lg">
    {{#link-to "teach.preview" @chapter.id }}
      {{#if (eq @chapter.imageUrl null)}}
        <img class="card-img-top" src="https://placehold.jp/20/{{color}}/ffffff/328x200.png?text={{@chapter.name}}"
          alt="">
      {{else}}
        <img class="card-img-top" alt="" src={{@chapter.imageUrl}}>
      {{/if}}
    {{/link-to}}
    <div class="card-body">
      <h5 class="text-dark">

        {{#link-to "teach.preview" @chapter.id class="text-dark " }}

          {{@chapter.name}}
        {{/link-to}}
      </h5>
      {{!-- Approved : {{@chapter.approved}} --}}

      <p class="card-text text-muted ">{{@chapter.description}}</p>
      <hr>

      <div class="d-flex text-muted ">
        <span class="text-center ">
          <div>
            {{#link-to "teach.preview" @chapter.id}}

              <MdIcon @icon="pencil" @size={{20}} />
              <br>
              <small>Edit</small>
            {{/link-to}}

          </div>
        </span>


      </div>

    </div>

  </div>
</div>