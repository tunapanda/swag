<div class="col-lg-4 col-md-6 mb-4 ">
  <div class="card h-100 shadow-sm">

    <LinkTo @route="chapter" @model={{@chapter.id}}>
      {{#if (eq @chapter.imageUrl null)}}
        <img class="card-img-top" src="https://placehold.jp/20/{{this.color}}/ffffff/328x200.png?text={{@chapter.name}}"
        alt="" role="presentation">
      {{else}}
        <img class="card-img-top" alt="" src={{@chapter.imageUrl}} role="presentation">
      {{/if}}
    </LinkTo>
    <div class="card-body chapter-body">
      <div class="actions-section d-flex justify-content-between">
        <div class="reactions">
          <Reaction::ChapterReaction @chapter={{@chapter}} @canReact={{false}}>

          </Reaction::ChapterReaction>
        </div>
        <div class="popup-actions">

        </div>
      </div>

      <h5 class="card-title title-section">
        <LinkTo @route="chapter" @model={{@chapter.id}}>
          {{@chapter.name}}
        </LinkTo>
      </h5>

      {{#if this.config.content.APP.linkify_description}}
        <p class="card-text">
          {{linkify @chapter.description class="btn btn-primary mt-3 replaced"}}
        </p>
      {{else}}
        <p class="card-text">{{@chapter.description}}</p>

      {{/if}}

      <br>
      {{#each @chapter.tags as |tag|}}
        <LinkTo @route="tag" @model={{tag}}>
          <span class="badge badge-pill badge-primary btn-lg">
            {{tag}}
          </span>
        </LinkTo>

      {{/each}}
    </div>

  </div>
</div>