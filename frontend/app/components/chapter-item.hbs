<div class="module-item {{if @available "green" "red"}}">

  {{!-- {{#link-to "course" @course "module" @module.id}} --}}


  <div class="module-flex">
    <div class="circle-parent">
      <div class="small-circle"></div>

    </div>

    <div class="module-description">

      {{#link-to "chapter" @chapter.id }}
        <h3>{{@chapter.name}}</h3>

      {{/link-to}}
      <div>{{@chapter.description}}</div>
      {{#if (eq @chapter.targetStatus "attempted")}}
        <span class="badge badge-warning">Contiue</span>

      {{/if}}

      {{#if (eq @chapter.targetStatus "completed")}}
        <span class="badge badge-success">Complete</span>

      {{/if}}


    </div>

  </div>


</div>