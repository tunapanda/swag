<div class="col-lg-3 col-md-6 mb-3 rounder">
  <div class="card h-100 shadow-sm rounder">
    {{#link-to "chapter" @chapter.id }}
      {{#if (eq @chapter.imageUrl null)}}
        <img class="card-img-top" src="https://placehold.jp/20/{{color}}/ffffff/328x200.png?text={{@chapter.name}}"
          alt="">
      {{else}}
        <img class="card-img-top round-image" alt="" src={{@chapter.imageUrl}}>
      {{/if}}
    {{/link-to}}
    <div class="card-body">
      <h5 class="card-title">

        {{#link-to "chapter" @chapter.id }}

          {{@chapter.name}}
        {{/link-to}}
      </h5>



      <p class="card-text text-muted">
        {{linkify @chapter.description class="btn btn-primary mt-3 replaced" target="_blank"}}
      </p>

    </div>

  </div>
</div>